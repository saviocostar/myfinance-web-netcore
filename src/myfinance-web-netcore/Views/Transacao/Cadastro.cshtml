@model TransacaoModel

@{
ViewData["Title"] = "Registro de Transacao Financeira";
}

<h1>@ViewData["Title"]</h1>

<div class="mt-3 mb-3">
    <form asp-controller="Transacao" asp-action="Cadastro" method="post">
        <div class="container">
            <div class="col-md-3">
                <input type="hidden" id="txtId" class="form-control" asp-for="Id" />

                <label class="form-label">Data</label>
                <input type="date" id="txtData" class="form-control" asp-for="Data" />

                <label class="form-label mt-3">Valor</label>
                <input type="number" id="txtValor" class="form-control" asp-for="Valor" step="0.01" />

                <label class="form-label mt-3">Item Plano Conta</label>
                @Html.DropDownListFor(m => m.PlanoContaId, Model.PlanoContas, new { @class="form-select" })

                <label class="form-label mt-3">Hist√≥rico</label>
                <input type="text" id="txtHistorico" class="form-control" asp-for="Historico" />

                <label class="form-label mt-3">Tipo de Pagamento</label>
                @Html.DropDownListFor(m => m.TipoPagamentoId, Model.TiposPagamento, new { @class="form-select" })

                <div class="mt-3 mb-3">
                    <button type="submit" class="btn btn-success">Registrar</button>
                    <button type="button" class="btn btn-secondary" onclick="Voltar()">Cancelar</button>
                </div>

            </div>
        </div>
    </form>
</div>

<script>
    function Voltar() {
        window.location.href = "../Transacao/Index"
    }
</script>